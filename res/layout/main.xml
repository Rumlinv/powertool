<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/LinearLayout01" 
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent" 
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="vertical">
				
	<LinearLayout android:id="@+id/LinearLayout05" 
					android:layout_height="fill_parent"
					android:layout_gravity="center"
					android:layout_width="fill_parent"
					android:orientation="vertical"
					android:layout_weight="1" >				
			<TextView android:layout_height="wrap_content" 
						android:layout_gravity="center" 
						android:gravity="center" 
						android:layout_weight="3" 
						android:id="@+id/TextView" 
						android:text="TextView" android:layout_width="fill_parent">
			</TextView>
			<TextView android:layout_height="wrap_content" 
						android:layout_weight="0.5" 
						android:id="@+id/TextViewHint" 
						android:layout_width="fill_parent" android:text="Set a power off time" android:gravity="bottom|center">
			</TextView>
	</LinearLayout>
	
	<LinearLayout android:id="@+id/LinearLayout06" 
					android:layout_height="fill_parent"
					android:layout_gravity="center"
					android:layout_width="fill_parent"
					android:orientation="vertical"
					android:layout_weight="1" >	
					
			<LinearLayout android:id="@+id/LinearLayout03" 
							android:layout_gravity="center" 
							android:layout_width="wrap_content" 
							android:layout_height="fill_parent"
							android:layout_weight="1" >
			
					<TimePicker android:layout_height="wrap_content" 
								android:id="@+id/TimePicker" 
								android:layout_width="fill_parent" 
								android:layout_gravity="center_vertical|center">
					</TimePicker>
			</LinearLayout>
		
			<LinearLayout android:id="@+id/LinearLayout04" 
							android:layout_height="fill_parent"
							android:layout_gravity="center"
							android:layout_width="wrap_content"
							android:layout_weight="3.5" >
							
					<Button android:layout_width="wrap_content" 
							android:layout_height="wrap_content" 
							android:id="@+id/btnOK" 
							android:layout_gravity="center" android:text="Set Schedule">
					</Button>
					<Button android:layout_width="wrap_content" 
							android:layout_height="wrap_content" 
							android:id="@+id/btnCancel" 
							android:layout_gravity="center" android:text=" UnSchedule ">
					</Button>				
			</LinearLayout>
	</LinearLayout>
</LinearLayout>
